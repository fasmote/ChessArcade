      "backgrounds": ["#0a0a0a", "#1a0033", "#330066"]
    },
    "typography": {
      "font_family": "Orbitron, monospace",
      "weights": [400, 700, 900],
      "sizes": {
        "title": "4.5rem",
        "subtitle": "1.4rem", 
        "heading": "1.5rem",
        "body": "1rem"
      }
    },
    "spacing": {
      "xs": "0.5rem",
      "sm": "1rem", 
      "md": "1.5rem",
      "lg": "2rem",
      "xl": "3rem",
      "xxl": "4rem"
    },
    "effects": {
      "glow_levels": ["10px", "20px", "30px", "40px"],
      "transitions": ["0.2s ease", "0.4s ease", "0.6s ease"],
      "border_radius": ["8px", "15px", "20px", "50px"]
    }

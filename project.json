{
  "name": "ChessArcade - NeonChess System",
  "version": "1.0.0",
  "description": "Sistema de diseño modular para juegos de ajedrez con estética synthwave/retrowave",
  "author": "ChessArcade Team",
  "license": "MIT",
  "keywords": ["chess", "arcade", "games", "neon", "synthwave", "retro", "80s"],
  
  "project": {
    "type": "Web Application",
    "framework": "Vanilla HTML/CSS/JS",
    "design_system": "NeonChess",
    "responsive": true,
    "accessibility": "WCAG 2.1 AA",
    "browser_support": ["Chrome 90+", "Firefox 88+", "Safari 14+", "Edge 90+"]
  },
  
  "structure": {
    "assets": {
      "css": {
        "main": "neonchess-style.css",
        "size": "~50KB",
        "features": ["custom-properties", "grid", "animations", "responsive"]
      },
      "js": {
        "main": "neonchess-effects.js", 
        "size": "~25KB",
        "features": ["particle-system", "effects", "interactions", "es6-classes"]
      },
      "images": {
        "description": "Assets específicos de juegos y recursos visuales"
      }
    },
    "games": {
      "knight-quest": "✅ Implementado - Tour del caballo",
      "vision-blitz": "⏳ Pendiente - Reconocimiento táctico",
      "square-rush": "⏳ Pendiente - Navegación coordenadas",
      "tactic-burst": "⏳ Pendiente - Patrones tácticos",
      "checkmate-countdown": "⏳ Pendiente - Mate en X",
      "memory-matrix": "⏳ Pendiente - Memorización posiciones"
    },
    "docs": {
      "README.md": "Documentación principal del proyecto",
      "COMPONENTS.md": "Guía detallada de componentes",
      "STYLE-GUIDE.md": "Guía de estilo y paletas de color"
    }
  },
  
  "design_tokens": {
    "colors": {
      "primary": ["#00ffff", "#ff0080", "#00ff80", "#ff8000"],
